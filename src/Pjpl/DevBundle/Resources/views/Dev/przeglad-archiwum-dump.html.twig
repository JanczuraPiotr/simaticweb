{% extends "PjplDevBundle::window.html.twig" %}

{% block body %}
	<div class="count">
		{{ zrzuty.getTotalItemCount }}
	</div>


		<table>
			<thead>
				<tr>
					<th>id</th>
					<th>timestamp</th>
					<th>blok danych </th>
					<th>wejścia</th>
					<th>wyjścia</th>
				</tr>
			</thead>
			<tbody>
				{% for zrzut in zrzuty %}

					<tr>
						<td> {{ zrzut.id }} </td>
						<td> {{ zrzut.timestamp|slice(0,-3)|date("Y-m-d H:i:s")}} <br> {{ zrzut.timestamp|slice(10,3) }} [ms] </td>
						<td>
							{% for el in zrzut.strHexD %}
								{{ el }}
							{% endfor %}
						</td>
						<td>
							{% for el in zrzut.strHexI %}
								{{ el }}
							{% endfor %}
						</td>
						<td>
							{% for el in zrzut.strHexQ %}
								{{ el }}
							{% endfor %}
						</td>
					</tr>

				{% endfor %}
			</tbody>
		</table>


		<div class="navigation">
			{{ knp_pagination_render(zrzuty) }}
		</div>

{% endblock %}